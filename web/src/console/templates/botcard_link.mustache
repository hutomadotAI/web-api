<div id="bot_list" class="row no-margin">
    {{#bots}}
        <span id="card{{botId}}" data-pos="{{index}}">
            <div class="box-card card flat no-padding col-xs-6 col-sm-4 col-md-3 col-lg-1 {{borderActive}}">
                <img class="card-icon unselectable" src="{{imagePath}}"
                     onClick="location.href='botstore.php?botId={{botId}}&category={{category}}'">
                <div class="card-title unselectable no-shadow"
                     onClick="location.href='botstore.php?botId={{botId}}&category={{category}}'">{{botName}}</div>
                    <div class="card-author unselectable no-shadow"></div>
                    <div class="card-footer flat unselectable">
                        <div class="row no-margin">
                            <div class="pull-left"></div>
                            {{#isLinked}}
                                <span class="card-linked" data-botid="{{botId}}" data-linked="true">
                                    <div class="switch switchOn" id="btnSwitch{{botId}}" style="margin-top:10px;"
                                        onclick="toggleAddBotSkill(this,3,'{{botId}}')" data-link="true"></div>
                                </span>
                            {{/isLinked}}
                            {{^isLinked}}
                                <span class="card-linked" data-botid="{{botId}}" data-linked="false">
                                    <div class="switch" id="btnSwitch{{botId}}" style="margin-top:10px;"
                                     onclick="toggleAddBotSkill(this,3,'{{botId}}')" data-link="false"></div>
                                </span>
                            {{/isLinked}}
                        </div>
                    </div>
            </div>
        </span>
    {{/bots}}
</div>